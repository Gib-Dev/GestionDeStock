<Window x:Class="GESTION_DES_STOCKS.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GESTION_DES_STOCKS"
        mc:Ignorable="d"
        Title="AddProductWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Champ Nom du Produit -->
        <TextBlock Text="Nom du Produit" Grid.Row="0" Margin="0,0,0,5"/>
        <TextBox x:Name="ProductNameTextBox" Grid.Row="1" Width="300" Margin="0,0,0,15"/>

        <!-- Champ Description -->
        <TextBlock Text="Description" Grid.Row="2" Margin="0,0,0,5"/>
        <TextBox x:Name="DescriptionTextBox" Grid.Row="3" Width="300" Margin="0,0,0,15"/>

        <!-- Champ Prix -->
        <TextBlock Text="Prix" Grid.Row="4" Margin="0,0,0,5"/>
        <TextBox x:Name="PriceTextBox" Grid.Row="5" Width="300" Margin="0,0,0,15"/>

        <!-- Champ Quantité en Stock -->
        <TextBlock Text="Quantité en Stock" Grid.Row="6" Margin="0,0,0,5"/>
        <TextBox x:Name="StockQuantityTextBox" Grid.Row="7" Width="300" Margin="0,0,0,15"/>

        <!-- Bouton Ajouter -->
        <Button Content="Ajouter" Grid.Row="8" Width="100" Height="30" HorizontalAlignment="Right" Margin="0,20,0,0" 
                Click="AddButton_Click" Background="Green" Foreground="White"/>
    </Grid>
</Window>
